---
import { getImage, Image } from "astro:assets";

import imgBgBanner from "@/assets/img/bgBanner.webp";
import svgLogoSurima from "@/assets/svg/logo.svg";

const optimizedBackground = await getImage({
  src: imgBgBanner,
  format: "webp",
});
---

<section
  class="w-full h-[40rem] lg:h-[56rem] rounded-b-[3rem] overflow-hidden"
  style={`background-image: url(${optimizedBackground.src});`}
>
  <div
    style="background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, #152624 100%);"
    class="w-full h-full flex flex-col items-center justify-center gap-6"
  >
    <Image
      class="w-4/5 md:w-1/2 xl:w-1/3"
      src={svgLogoSurima}
      alt="Logo principal de Surima"
    />
    <div class="flex flex-col items-center gap-4">
      <h1 class="font-title text-white text-3xl lg:text-4xl">
        Sustainable Rivera Maya
      </h1>
      <p
        class="font-sans font-normal text-white text-center text-2xl lg:3xl max-w-4xl"
      >
        Environmentally-conscious urbanization. <br /> Immerse yourself in a space
        that fosters meaningful connections between your community and nature.
      </p>
    </div>
  </div>
</section>

